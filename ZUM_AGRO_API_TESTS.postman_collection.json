          "pm.request.headers.add({\n    key: 'User-Agent',\n    value: 'ZUM-Agro-Vision-API-Tester/1.0'\n});",
          "",
          "// Log request details",
          "console.log('üå± Making request to:', pm.request.url);",
          "console.log('üìÖ Request method:', pm.request.method);",
          "console.log('üìä Request body:', pm.request.body?.raw || 'No body');"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Test response structure",
          "pm.test('‚úÖ Response is JSON', function () {",
          "    pm.response.to.have.jsonBody();",
          "});",
          "",
          "pm.test('‚úÖ Response has success field', function () {",
          "    const jsonData = pm.response.json();",
          "    pm.expect(jsonData).to.have.property('success');",
          "});",
          "",
          "pm.test('‚úÖ Response time is acceptable', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(30000); // 30 seconds",
          "});",
          "",
          "// Test specific endpoints",
          "if (pm.request.url.path.includes('/ndvi')) {",
          "    pm.test('üå± NDVI API - Check response structure', function () {",
          "        const jsonData = pm.response.json();",
          "        if (jsonData.success) {",
          "            pm.expect(jsonData).to.have.property('results');",
          "            pm.expect(jsonData).to.have.property('alerts');",
          "            pm.expect(jsonData).to.have.property('thresholds');",
          "        }",
          "    });",
          "}",
          "",
          "if (pm.request.url.path.includes('/soil-mapping-fertilizer')) {",
          "    pm.test('üåæ Soil API - Check response structure', function () {",
          "        const jsonData = pm.response.json();",
          "        if (jsonData.success) {",
          "            pm.expect(jsonData).to.have.property('results');",
          "            pm.expect(jsonData).to.have.property('recommendations');",
          "        }",
          "    });",
          "}",
          "",
          "if (pm.request.url.path.includes('/productivity-zoning')) {",
